<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <description>Wiring the dependencies for the Facility Management System.</description>

    <bean id = "room" class = "main.model.facility.Room" scope="prototype">
        <constructor-arg name="roomNumber" type="int" value="0"/>
        <constructor-arg name="type" value=""/>
        <constructor-arg name="capacity" type="int" value="0"/>
        <constructor-arg name="cost" type="double" value="0"/>
        <constructor-arg name="vacant" value="true"/>
    </bean>

    <bean id = "floor" class = "main.model.facility.Floor" scope="prototype">
        <property name="roomList" ref="room" />
        <constructor-arg name="inRepair" value= "false" />
        <constructor-arg name="vacant" value="false" />
        <constructor-arg name="numberOfRooms" type="int" value="0" />
        <constructor-arg name="floorNumber" type="int" value="0"/>
    </bean>

    <bean id="building" class="main.model.facility.Building" scope="prototype">
        <property name="floorList" ref="floor"/>
        <constructor-arg name="name" value="${}" />
        <constructor-arg name="buildingNotes" value="${}" />
        <constructor-arg name="numberOfRooms" type="int" value="0" />
        <constructor-arg name="numberOfVacantRooms" type="int" value="0" />

    </bean>
    <bean id = "mail" class = "main.model.facility.Mail" scope="prototype">
        <constructor-arg name="roomNumber" type="int" value="0"/>
        <constructor-arg name="mailType" value=""/>
        <constructor-arg name="dateOfArrival" value=""/>
        <constructor-arg name="recipient" ref="user"/>
    </bean>

    <bean id = "mailRoom" class = "main.model.facility.MailRoom" scope="prototype">
        <property name="mailInventory" ref="mail"/>
    </bean>

    <bean id = "user" class = "main.model.user.User" scope="prototype">
        <property name="userRegistry" ref="userRegistry"/>

    </bean>

    <bean id="userRegistry" class="main.model.user.UserRegistry" scope="prototype">
        <property name="userList">
            <list/>
        </property>
    </bean>


    <bean id = "staff" class = "main.model.staff.Staff" scope="prototype">
        <property name="staffRegistry" ref="staffRegistry"/>
    </bean>

    <bean id="staffRegistry" class="main.model.staff.StaffRegistry" scope="prototype" >
        <property name="staffList">
            <list/>
        </property>
    </bean>



    <bean id = "maintenanceRequest" class = "main.model.maintenance.MaintenanceRequest" scope="prototype">
        <constructor-arg name="id" type="int" value="0"/>
        <constructor-arg name="estimateCost" type="int" value="0"/>
        <constructor-arg name="date" value=""/>
        <constructor-arg name="assignedId" type="int" value="0"/>
        <constructor-arg name="inProgress" value="true"/>
        <constructor-arg name="notes" value="true"/>
        <constructor-arg name="room" ref="room"/>
    </bean>

    <bean id="maintenanceStaff" class="main.model.maintenance.MaintenanceStaff" scope="prototype">
        <constructor-arg name="id" type="int" value="0"/>
        <constructor-arg name="onDuty" value="true" />
        <constructor-arg name="currentTask" type="int" value="0"/>
    </bean>

    <bean id="maintOff" class="main.model.maintenance.MaintOff" scope="prototype" >
        <property name="maintenanceStaffList" ref="maintenanceStaff"/>
        <property name="requestLog" ref="maintenanceRequest"/>
    </bean>


</beans>